<%- include('partials/header') %>
<style>
    .form-page {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 200px);
    }

    .form-card {
        width: 100%;
        max-width: 700px;
        background: rgba(15, 23, 42, 0.8);
        border: 2px solid var(--border-glow);
        border-radius: 24px;
        padding: 40px;
        backdrop-filter: blur(10px);
        box-shadow: 0 8px 32px rgba(99, 102, 241, 0.3);
    }

    .form-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .form-header h1 {
        font-family: 'Orbitron', sans-serif;
        font-size: 36px;
        background: linear-gradient(135deg, #3b82f6, var(--space-purple));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 10px;
    }

    .form-header p {
        color: var(--text-secondary);
        font-size: 16px;
    }

    .loading-state {
        text-align: center;
        padding: 60px 20px;
    }

    .loading-state i {
        font-size: 60px;
        color: var(--space-purple);
        animation: spin 1s linear infinite;
    }

    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .loading-state h3 {
        color: var(--text-primary);
        margin-top: 20px;
        font-family: 'Rajdhani', sans-serif;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-group label {
        display: flex;
        align-items: center;
        gap: 8px;
        color: var(--text-primary);
        font-weight: 600;
        font-size: 16px;
        margin-bottom: 10px;
        font-family: 'Rajdhani', sans-serif;
    }

    .form-group label i {
        color: #3b82f6;
        font-size: 18px;
    }

    .form-control {
        width: 100%;
        padding: 15px 20px;
        background: rgba(30, 41, 59, 0.6);
        border: 2px solid rgba(99, 102, 241, 0.3);
        border-radius: 12px;
        color: var(--text-primary);
        font-size: 16px;
        font-family: 'Rajdhani', sans-serif;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        outline: none;
        border-color: #3b82f6;
        background: rgba(30, 41, 59, 0.8);
        box-shadow: 0 0 20px rgba(59, 130, 246, 0.4);
    }

    .form-control::placeholder {
        color: var(--text-secondary);
        opacity: 0.6;
    }

    textarea.form-control {
        resize: vertical;
        min-height: 120px;
    }

    .input-hint {
        display: flex;
        align-items: center;
        gap: 5px;
        color: var(--text-secondary);
        font-size: 13px;
        margin-top: 5px;
    }

    .input-hint i {
        font-size: 12px;
    }

    .form-actions {
        display: flex;
        gap: 15px;
        margin-top: 35px;
    }

    .btn {
        flex: 1;
        padding: 15px 30px;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 16px;
        font-family: 'Rajdhani', sans-serif;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        text-decoration: none;
    }

    .btn-submit {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
        box-shadow: 0 4px 15px rgba(59, 130, 246, 0.4);
    }

    .btn-submit:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(59, 130, 246, 0.6);
    }

    .btn-cancel {
        background: rgba(239, 68, 68, 0.2);
        color: #f87171;
        border: 2px solid rgba(239, 68, 68, 0.3);
    }

    .btn-cancel:hover {
        background: rgba(239, 68, 68, 0.3);
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(239, 68, 68, 0.4);
    }

    .rating-preview {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-top: 10px;
    }

    .stars {
        display: flex;
        gap: 5px;
    }

    .stars i {
        color: #fbbf24;
        font-size: 20px;
    }

    .rating-value {
        color: var(--space-cyan);
        font-weight: 700;
        font-size: 18px;
    }

    .error-message {
        background: rgba(239, 68, 68, 0.1);
        border: 2px solid rgba(239, 68, 68, 0.3);
        border-radius: 12px;
        padding: 15px;
        color: #f87171;
        margin-top: 20px;
        display: none;
    }

    .error-message i {
        margin-right: 10px;
    }

    @media (max-width: 768px) {
        .form-card {
            padding: 25px;
            margin: 20px;
        }

        .form-header h1 {
            font-size: 28px;
        }

        .form-actions {
            flex-direction: column;
        }
    }
</style>
</head>
<body>
    <%- include('partials/navbar') %>
    
    <div class="content-wrapper">
        <div class="form-page">
            <div class="form-card">
                <div class="form-header">
                    <h1><i class="fas fa-edit"></i> EDITAR FOTOGRAFÍA</h1>
                    <p>Actualiza la información de tu fotografía</p>
                </div>

                <div id="loadingState" class="loading-state">
                    <i class="fas fa-spinner"></i>
                    <h3>Cargando datos...</h3>
                </div>

                <form id="editForm" style="display: none;">
                    <input type="hidden" id="id" name="id" value="">
                    
                    <div class="form-group">
                        <label for="title">
                            <i class="fas fa-heading"></i>
                            Título
                        </label>
                        <input 
                            type="text" 
                            class="form-control" 
                            id="title" 
                            name="title" 
                            placeholder="Título de la fotografía"
                            required
                        >
                    </div>

                    <div class="form-group">
                        <label for="description">
                            <i class="fas fa-align-left"></i>
                            Descripción
                        </label>
                        <textarea 
                            class="form-control" 
                            id="description" 
                            name="description" 
                            placeholder="Describe tu fotografía..."
                            required
                        ></textarea>
                    </div>

                    <div class="form-group">
                        <label for="rate">
                            <i class="fas fa-star"></i>
                            Calificación
                        </label>
                        <input 
                            type="number" 
                            class="form-control" 
                            id="rate" 
                            name="rate" 
                            step="0.1" 
                            min="0" 
                            max="10" 
                            required
                        >
                        <div class="rating-preview" id="ratingPreview" style="display: none;">
                            <div class="stars" id="starsPreview"></div>
                            <span class="rating-value" id="ratingValue">0.0</span>
                        </div>
                        <div class="input-hint">
                            <i class="fas fa-info-circle"></i>
                            Califica de 0 a 10
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="ruta">
                            <i class="fas fa-link"></i>
                            Ruta (Opcional)
                        </label>
                        <input 
                            type="text" 
                            class="form-control" 
                            id="ruta" 
                            name="ruta" 
                            placeholder="URL o ruta de la imagen"
                        >
                    </div>

                    <div class="error-message" id="errorMessage">
                        <i class="fas fa-exclamation-circle"></i>
                        <span id="errorText"></span>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-submit">
                            <i class="fas fa-save"></i>
                            Actualizar Fotografía
                        </button>
                        <a href="/photos/list" class="btn btn-cancel">
                            <i class="fas fa-times"></i>
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        const fotoId = '<%= id %>';
        
        // Preview de calificación
        const rateInput = document.getElementById('rate');
        const ratingPreview = document.getElementById('ratingPreview');
        const starsPreview = document.getElementById('starsPreview');
        const ratingValue = document.getElementById('ratingValue');

        rateInput.addEventListener('input', function() {
            const value = parseFloat(this.value) || 0;
            
            if (value > 0) {
                ratingPreview.style.display = 'flex';
                ratingValue.textContent = value.toFixed(1);
                
                const stars = Math.round((value / 10) * 5);
                starsPreview.innerHTML = '';
                
                for (let i = 1; i <= 5; i++) {
                    const star = document.createElement('i');
                    star.className = i <= stars ? 'fas fa-star' : 'far fa-star';
                    starsPreview.appendChild(star);
                }
            } else {
                ratingPreview.style.display = 'none';
            }
        });
        
        async function loadFoto() {
            try {
                const response = await fetch(`/findAllById/${fotoId}/json`);
                const fotos = await response.json();
                
                if (fotos.length > 0) {
                    const foto = fotos[0];
                    document.getElementById('id').value = foto.id;
                    document.getElementById('title').value = foto.titulo;
                    document.getElementById('description').value = foto.descripcion;
                    document.getElementById('rate').value = foto.calificacion;
                    document.getElementById('ruta').value = foto.ruta || '';
                    
                    // Trigger rating preview
                    rateInput.dispatchEvent(new Event('input'));
                    
                    document.getElementById('loadingState').style.display = 'none';
                    document.getElementById('editForm').style.display = 'block';
                } else {
                    showError('Fotografía no encontrada');
                }
            } catch (error) {
                console.error('Error al cargar foto:', error);
                showError('Error al cargar los datos de la fotografía');
            }
        }
        
        function showError(message) {
            document.getElementById('loadingState').style.display = 'none';
            document.getElementById('errorText').textContent = message;
            document.getElementById('errorMessage').style.display = 'block';
        }
        
        document.getElementById('editForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const rate = parseFloat(document.getElementById('rate').value);
            
            if (rate < 0 || rate > 10) {
                showError('La calificación debe estar entre 0 y 10');
                return;
            }
            
            const formData = {
                id: document.getElementById('id').value,
                titulo: document.getElementById('title').value,
                descripcion: document.getElementById('description').value,
                calificacion: rate,
                ruta: document.getElementById('ruta').value
            };
            
            try {
                const response = await fetch('/update', {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });
                
                if (response.ok) {
                    window.location.href = '/photos/list?message=' + encodeURIComponent('Fotografía actualizada exitosamente');
                } else {
                    showError('Error al actualizar la fotografía');
                }
            } catch (error) {
                console.error('Error:', error);
                showError('Error al actualizar la fotografía');
            }
        });
        
        loadFoto();
    </script>

<%- include('partials/footer') %>